# Adobe Stock Analyzer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: AI Integration (if you want to add Gemini AI later)
# GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Database Configuration (if you want to add data persistence)
# DATABASE_URL=your_database_url_here

# Optional: Redis Configuration (for caching)
# REDIS_URL=your_redis_url_here

# Security Configuration
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Python Configuration
PYTHON_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=server.log

# CORS Configuration
ALLOWED_ORIGINS=chrome-extension://,moz-extension://,localhost,127.0.0.1,railway.app

# Railway Deployment (automatically set by Railway)
# RAILWAY_STATIC_URL=your-app.railway.app
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
